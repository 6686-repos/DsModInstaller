{
  "name": "dsmodinstaller",
  "version": "0.1.6",
  "description": "System tray application to manage sheltupdate process",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win",
    "publish": "electron-builder build --win -p always"
  },
  "author": "6686-repos",
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.1",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.dsmodinstaller.app",
    "productName": "DS Mod Installer",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico",
      "artifactName": "DS-Mod-Installer-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": false,
      "include": "installer.nsh"
    },
    "publish": {
      "provider": "github",
      "owner": "6686-repos",
      "repo": "DsModInstaller"
    }
  }
}
